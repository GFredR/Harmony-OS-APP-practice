<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <TextField ohos:id="$+id:usernameField"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text_size="18vp"
        ohos:text_color="#7B68EE"
        ohos:text_alignment="center"
        ohos:hint="请输入用户名">

    </TextField>
<!--    <Button ohos:id="$+id:ckbtn"-->
<!--        ohos:height="match_content"-->
<!--        ohos:width="match_parent"-->
<!--        ohos:text="ahhhahhahhahhah"-->
<!--        ohos:text_size="20vp">-->

<!--    </Button>-->
    <Button ohos:id="$+id:newbtn"
            ohos:height="40vp"
            ohos:width="match_parent"
            ohos:text="提交"
            ohos:text_size="20vp"
            ohos:background_element="$graphic:background_ability_main"
            ohos:left_margin="10vp"
            ohos:right_margin="10vp">

    </Button>
    <Image ohos:id="$+id:loginImg"
        ohos:height="200vp"
        ohos:width="match_parent"
        ohos:image_src="$media:1cde02a74933004ed753dbb6165601d7">

    </Image>

<DirectionalLayout
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="horizontal">
    <Checkbox ohos:id="$+id:checkBox1"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="学习"
        ohos:text_size="20vp"
        ohos:text_color_on="#FF3333"
        ohos:text_color_off="#000000">
    </Checkbox>
    <Checkbox ohos:id="$+id:checkBox2"
              ohos:height="match_content"
              ohos:width="match_content"
              ohos:text="科技"
              ohos:text_size="20vp"
              ohos:text_color_on="#FF3333"
              ohos:text_color_off="#000000">
    </Checkbox>
    <Checkbox ohos:id="$+id:checkBox3"
              ohos:height="match_content"
              ohos:width="match_content"
              ohos:text="音乐"
              ohos:text_size="20vp"
              ohos:text_color_on="#FF3333"
              ohos:text_color_off="#000000">
    </Checkbox>
</DirectionalLayout>
<!--    <DirectionalLayout-->
<!--        ohos:height="match_parent"-->
<!--        ohos:width="match_parent"-->
<!--        ohos:orientation="horizontal">-->
        <RadioContainer ohos:id="$+id:radioContainer"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center">
            <RadioButton ohos:id="$+id:radio1"
                ohos:height="40vp"
                ohos:width="match_content" ohos:text="男"
                         ohos:text_size="14vp">

            </RadioButton>
            <RadioButton ohos:id="$+id:radio2"
                         ohos:height="40vp"
                         ohos:width="match_content" ohos:text="女"
                ohos:text_size="14vp">

            </RadioButton>
        </RadioContainer>
<!--    </DirectionalLayout>-->
</DirectionalLayout>